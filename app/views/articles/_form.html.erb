<% if @article.errors.any? %>
<h2>The following errors prevented the article being created</h2>
<ul>
    <% @article.errors.full_messages.each do |m| %>
        <li><%= m %> </li>
    <% end %>
</ul>
<% end %>   

<div class="row">
    <div class="col-md-12">
         <%= form_for(@article, html: {class: "form-horizontal"})  do |f| %>
            <div class="form-group"> 
                <div class="col-md-2 control-label">
                    <%= f.label :title %>
                </div>
                <div class="col-md-8 ">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
                </div>
            </div>
            <div class="form-group"> 
                <div class="col-md-2 control-label">
                    <%= f.label :description %>
                </div>
                <div class="col-md-10">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <%= f.submit class: "btn btn-primary" %>
                </div>
            </div>    
        <% end %>
        
        <div class="col-xs-offset-4 col-xs-4">
            <%= link_to "Cancel request and return to index", articles_path %>
        </div>
    </div>
</div>